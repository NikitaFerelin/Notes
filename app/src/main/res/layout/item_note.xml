<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extraSmallMargin"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_marginEnd="@dimen/extraSmallMargin"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/standardMargin"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/smallMargin"
                android:layout_marginTop="@dimen/extraSmallMargin"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/smallTextSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Note title" />

            <TextView
                android:id="@+id/textViewContent"
                style="@style/textContent"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/extraSmallMargin"
                android:layout_marginEnd="@dimen/extraSmallMargin"
                android:background="@color/white"
                android:maxHeight="150dp"
                android:textSize="@dimen/smallTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewTitle"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                tools:text="My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team...My name is Nichita i am pro deeveloper and i want to join to Yandex Team..." />

            <TextView
                style="@style/textDate"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/standardMargin"
                android:layout_marginBottom="@dimen/extraSmallMargin"
                android:background="@color/white"
                android:textSize="@dimen/extraSmallTextSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewContent"
                app:layout_constraintTop_toBottomOf="@id/textViewContent"
                tools:text="12 yanvaria sego goda" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:contentDescription="@string/descriptionSelectedColor"
                android:src="@drawable/ic_mark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>