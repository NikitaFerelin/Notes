<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pagerFragment">

    <fragment
        android:id="@+id/pagerFragment"
        android:name="com.ferelin.notes.ui.pager.PagerFragment"
        android:label="PagerFragment">

        <action
            android:id="@+id/action_pagerFragment_to_createFragment"
            app:destination="@id/createFragment" />
        <action
            android:id="@+id/action_pagerFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/createFragment"
        android:name="com.ferelin.notes.ui.create.CreateFragment"
        android:label="CreateFragment">
        <argument
            android:name="responseKey"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ferelin.notes.ui.details.DetailsFragment"
        android:label="DetailsFragment">

        <argument
            android:name="responseKey"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="color"
            app:argType="string" />
    </fragment>

</navigation>