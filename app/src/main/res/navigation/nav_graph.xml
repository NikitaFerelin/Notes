<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/createFragment"
        android:name="com.ferelin.notes.ui.create.CreateFragment"
        android:label="CreateFragment">
        <argument
            android:name="responseKey"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ferelin.notes.ui.details.DetailsFragment"
        android:label="DetailsFragment">

        <argument
            android:name="responseKey"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="color"
            app:argType="string" />
        <argument
            android:name="transitionName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.ferelin.notes.ui.notes.NotesFragment"
        android:label="NotesFragment" >
        <action
            android:id="@+id/action_notesFragment_to_createFragment"
            app:destination="@id/createFragment"
            app:popUpTo="@id/notesFragment" />
        <action
            android:id="@+id/action_notesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@id/notesFragment" />
    </fragment>

</navigation>