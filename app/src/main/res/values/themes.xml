<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Notes" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/whiteBackground</item>

        <item name="android:background">@color/whiteBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="switchStyle">@style/SwitchButton</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="SwitchButton" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchStyle</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorOnSurface">@color/grayLight</item>
        <item name="colorOnSecondary">@color/orangeLight</item>
        <item name="colorSecondary">@color/orangeAccent</item>
        <item name="colorSurface">@color/grayIcon</item>

    </style>

</resources>