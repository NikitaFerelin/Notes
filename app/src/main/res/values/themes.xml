<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Notes" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/whiteBackground</item>
        <item name="colorAccent">@color/orangeAccent</item>

        <item name="android:fontFamily">@font/regular</item>

        <item name="android:background">@color/whiteBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="switchStyle">@style/SwitchButton</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="snackbarStyle">@style/snackbar</item>
        <!--<item name="snackbarTextViewStyle">@style/textStandard</item> -->
    </style>

    <style name="SwitchButton" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchStyle</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorOnSurface">@color/grayLight</item>
        <item name="colorOnSecondary">@color/orangeLight</item>
        <item name="colorSecondary">@color/orangeAccent</item>
        <item name="colorSurface">@color/grayIcon</item>

    </style>

    <style name="snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/whiteBackground</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>